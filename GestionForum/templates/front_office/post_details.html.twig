{% extends 'front.html.twig' %}
{% block body %}
    <section class="blog-details-area ptb-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-12">
                    <div class="blog-details-desc">
                        <div class="article-image">
                            <img src="{{ asset('front_css/img/main-blog-img6.jpg ')}}" alt="image">
                        </div>

                        <div class="article-content">
                            <div class="entry-meta">
                                <ul>
                                    <li>
                                        <i class="bx bx-folder-open"></i>
                                        <span>Category</span>
                                        <a href="">{{ post.categorie.nom }}</a>
                                    </li>
                                    <li>
                                        <i class="bx bx-group"></i>
                                        <span>View</span>
                                        <a href="#">813,454</a>
                                    </li>
                                    <li>
                                        <i class="bx bx-calendar"></i>
                                        <span>Last Updated</span>
                                        <a href="#">{{ post.createdAt|date('Y-m-d H:i:s') }}</a>
                                    </li>
                                </ul>
                            </div>

                            <h3>{{ post.titre|upper }}</h3>

                            <p>{{ post.contenu }}</p>

                        </div>

                        <div class="comments-area">
                            <h3 class="comments-title">{{ post.commentairePosts|length}} Comments:</h3>

                            <ol class="comment-list">
                                {% for comment in post.commentairePosts %}
                                <li class="comment">
                                    <article class="comment-body">
                                        <footer class="comment-meta">
                                            <div class="comment-author vcard">
                                                <img src="{{ asset('front_css/img/user1.jpg') }}" class="avatar" alt="image">
                                                <b class="fn">John Jones</b>
                                                <span class="says">says:</span>
                                            </div>

                                            <div class="comment-metadata">
                                                <a href="#">
                                                    <span>April 24, 2019 at 10:59 am</span>
                                                </a>
                                            </div>
                                        </footer>

                                        <div class="comment-content">
                                            <p>{{ comment.contenu }}</p>
                                        </div>

                                    </article>


                                        </li>
                                    </ol>
                                </li>
                                {% endfor %}
                            </ol>

                            <div class="comment-respond">
                                <h3 class="comment-reply-title">Leave a Reply</h3>
                                    <p class="comment-form-comment">
                                        <label>Comment</label>
                                        <textarea name="comment" id="comment_value" cols="45" placeholder="Your Comment..." rows="5" maxlength="65525" required="required"></textarea>
                                    </p>

                                    <p class="form-submit">
                                        <input id="comment_btn" class="submit" value="Post A Comment">
                                    </p>
                                    <script>
                                        document.getElementById("comment_btn").addEventListener('click', function(){
                                            var url = '{{ path('post_comment',{'id':post.id,'comment':'text'}) }}';
                                            url = url.replace("text",document.getElementById("comment_value").value);
                                            window.location.replace(url);
                                        });
                                    </script>
                            </div>
                        </div>
                    </div>
                </div>

