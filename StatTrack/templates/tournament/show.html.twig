{% extends 'base.html.twig' %}

{% block title %}Tournament{% endblock %}

{% block body %}
<div class="container">
 <a href="{{ path('app_tournament_index') }}">Back</a>
    <h1>Tournament</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tournament.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tournament.description }}</td>
            </tr>
            <tr>
                <th>Prise</th>
                <td>{{ tournament.prise }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{{ tournament.startdate ? tournament.startdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{{ tournament.enddate ? tournament.enddate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ tournament.photo }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tournament.name }}</td>
            </tr>
        </tbody>

    </table>

   

    <div>
    <a class="btn btn-warning" style="display: inline-block" href="{{ path('app_tournament_edit',{'id': tournament.id }) }}">Edit</a>
    <div style="display: inline-block">{{ include('tournament/_delete_form.html.twig') }}</div>
</div>

     
      

    
    </div>


 


<div class="container">
<h1> Match TAble:  </h1>
 {% for message in app.flashes('notice') %}
        <div class="alert alert-success mt-4 mb-b">
            {{message}}
        </div>
    {% endfor %}
    
    <table class="table">
  <thead>
    <tr class="table-active">    
      <th scope="col">#</th>
      <th scope="col">team1name</th>
      <th scope="col">team2name</th>
      <th scope="col">matchWiner</th>
      <th scope="col">Gamerplayed</th>
      <th scope="col">match time</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  {% for data in matchlist %}
    <tr class="table-{% if data.matchtime < date() %}danger {% else %}warning{% endif %}">
      <th scope="row">{{data.id}} </th>
      <td>{{data.team1name|upper}}</td>
      <td>{{data.team2name|upper}}</td>
      <td>{{data.teamwiner}}</td>
      <td>{{data.game}}</td>
        <td>{{ data.matchtime|date("Y-m-d H:i:s") }}</td>
       <td>
        <a class="btn btn-warning" href="{{ path('update',{'id': data.id }) }}">update</a>
        <a class="btn btn-danger" href="{{ path('delete',{'id': data.id }) }}">delete</a>
        </td>
    </tr>
    {% else %}
    <h3 style="color:Green;">there is no match!!!!!</h3>

    {% endfor %}
  </tbody>
</table>
</div>


{% endblock %}
