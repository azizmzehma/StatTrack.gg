{% extends 'base.html.twig' %}

{% block title %}CommentairePost index{% endblock %}

{% block body %}

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Gestion des Commentaires du forum</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Gestion Forum</li>
                    <li class="breadcrumb-item active">Commentaires</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <div  style="display:flex;justify-content: center;align-items: center;margin:1rem 0;">
            <button class="btn btn-primary"> <a style="color:white;text-decoration: none" href="{{ path('app_commentaire_post_new') }}">Create new</a></button>
        </div>
        <section class="section">
            <div class="row">
                <div >
                    <div class="card">
                        <div class="card-body">

                            <table class="table table-info" style="margin:2rem 0 2rem 0">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Contenu</th>
                                    <th>Created_at</th>
                                    <th>User_id</th>
                                    <th>actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for commentaire_post in commentaire_posts %}
                                    <tr>
                                        <td>{{ commentaire_post.id }}</td>
                                        <td>{{ commentaire_post.contenu }}</td>
                                        <td>{{ commentaire_post.createdAt ? commentaire_post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>{{ commentaire_post.userId }}</td>
                                        <td>
                                            <a class="btn btn-primary" href="{{ path('app_commentaire_post_show', {'id': commentaire_post.id}) }}">Show</a>
                                            <a class="btn btn-danger" href="{{ path('app_commentaire_post_edit', {'id': commentaire_post.id}) }}">Edit</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td style="text-align: center" colspan="5">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </section>

    </main><!-- End #main -->




{% endblock %}
