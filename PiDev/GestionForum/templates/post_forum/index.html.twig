{% extends 'base.html.twig' %}

{% block title %}Posts List{% endblock %}

{% block body %}

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Gestion des Posts du forum</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item">Gestion Forum</li>
                    <li class="breadcrumb-item active">Posts</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <div  style="display:flex;justify-content: center;align-items: center;margin:1rem 0;"> <button class="btn btn-primary"> <a style="color:white;text-decoration: none" href="{{ path('app_post_forum_new') }}">Create new</a></button>
        </div>
        <section class="section">
            <div class="row">
                <div >
                    <div class="card">
                        <div class="card-body">

                            <table class="table table-info" style="margin:2rem 0 2rem 0">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Contenu</th>
                                    <th>Titre</th>
                                    <th>Created_at</th>
                                    <th>User_id</th>
                                    <th>actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for post_forum in post_forums %}
                                    <tr>
                                        <td>{{ post_forum.id }}</td>
                                        <td>{{ post_forum.contenu }}</td>
                                        <td>{{ post_forum.titre }}</td>
                                        <td>{{ post_forum.createdAt ? post_forum.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>{{ post_forum.userId }}</td>
                                        <td>
                                            <a class="btn btn-primary" href="{{ path('app_post_forum_show', {'id': post_forum.id}) }}">Show</a>
                                            <a class="btn btn-danger" href="{{ path('app_post_forum_edit', {'id': post_forum.id}) }}">Edit</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </section>

    </main><!-- End #main -->


{% endblock body %}

