{% extends 'base.html.twig' %}

{% block title %}List of subscriptions{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/indexOffer.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/indexOffer.js') }}"></script>
{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center">
    <div class="card shadow-lg">
        <div class="card-header">
            <h4>List of Subscription</h4>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>offer_id</th>
                    <th>offer name</th>
                    <th>start_date</th>
                    <th>end_date</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for subscription in subscriptions %}
                    <tr>
                        <td>{{ subscription.id }}</td>
                        <td>{{ subscription.offer ? subscription.offer.id : '' }}</td>
                        <td>{{ subscription.offer ? subscription.offer.name }}</td>
                        <td>{{ subscription.start_date|date('Y-m-d') }}</td>
                        <td>{{ subscription.end_date|date('Y-m-d') }}</td>
                        <td>
                            <a href="{{ path('delete_subscription',{ 'id': subscription.id }) }}" class="btn btn-danger">delete subscription</a>
                            <a href="{{ path('edit_subscription',{ 'id': subscription.id }) }}" class="btn btn-warning">edit subscription</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div>
                <a href="{{ path('add_subscription') }}" class="btn btn-primary">Add an subscription</a>
            </div>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    {% if label == 'success' %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ message }}

                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <script>
                        setTimeout(function(){
                            $('.alert').alert('close');
                        }, 3000);
                    </script>
                {% endif %}
            {% endfor %}
        {% endfor %}
        <div/>  <div/>  <div/>  <div/> <div/>
    </div>
{% endblock %}
