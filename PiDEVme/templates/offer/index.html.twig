{% extends 'base.html.twig' %}

{% block title %}List of offers{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/indexOffer.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/indexOffer.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="container">

        <h1>List of offers</h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Duration</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for offer in offers %}
                <tr>
                    <td>{{ offer.id }}</td>
                    <td>{{ offer.name }}</td>
                    <td>{{ offer.description }}</td>
                    <td>{{ offer.price }}</td>
                    <td>{{ offer.duration }}</td>
                    <td>
                        <a href="{{ path('add_offer') }}" class="btn btn-primary">Add an offer</a>
                        <a href="{{ path('delete_offer',{ 'id': offer.id }) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this offer?');">Delete</a>
                        <a href="{{ path('edit_offer',{ 'id': offer.id }) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this offer?');">Edit</a>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                {% if label == 'success' %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <script>
                        setTimeout(function(){
                            $('.alert').alert('close');
                        }, 3000);
                    </script>
                {% endif %}
            {% endfor %}
        {% endfor %}

    </div>
{% endblock %}
